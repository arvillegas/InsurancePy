# Reference polizas.py
#: import main polizas.poliza
 


Polizas:
<LabelPolizas@Label>
    color:(0,0,0,1)
    halign: 'left'
<TbPoliza@TextInput>
    size_hint: (None, None)
    height: 30
    width: 160
<BP@Button>
    size_hint: (None, None)
    height: 30
    width: 160
<Polizas>:
    orientation: "vertical"
    num_poliza_text_input: num_poliza
    name_benef_text_input: name_benef
    last_name_benfe_text_input:last_name_benef
    age_benef_text_input:age_benef
    phone_benef_text_input:phone_benef

    picture_file_input:picture_file
    padding: 10
    spacing: 10


    Button:
        text:'Comprobante de Domicilio'
        size_hint:(None,None)
        pos:20, 50
        height:30
        width:200
        on_release:root.show_load()
    Button:
        text:'INE'
        size_hint:(None,None)
        pos:230, 50
        height:30
        width:100
        on_release:root.show_load()

 
    Label:
        text:'Nuevo Cliente'
        pos:0,250
        font_size:25
        color:(0,0,0,1)

      
    GridLayout:
        cols:2
        rows:11
        size_hint_y: None
        height: "100dp"
        pos: -5, 350 
        LabelPolizas:
            text: "Numero de Poliza"
            width:20
            height:50 
        TbPoliza:
            id: num_poliza
            text:'POLTIPO00000123'
            disabled:True
        LabelPolizas:
            text:"Cliente"
        BP:
            id:picture_file
            text:"Cliente"
        LabelPolizas:
            text:"Tipo de Seguro"
        BP:
            id:picture_file
            text:"Tipo de Seguro"
        LabelPolizas:
            text: "Nombre Beneficiario"
        TbPoliza:
            id: name_benef
        LabelPolizas:
            text: "Apellido Beneficiario"
        TbPoliza:  
            id: last_name_benef
        LabelPolizas:
            text:"Edad Beneficiario"
        TbPoliza:
            id:age_benef
        LabelPolizas:
            text:"Telefono Beneficiario"
        TbPoliza:
            id: phone_benef
        LabelPolizas:
            text:"Plan de Contratacion"
        BP:
            id:picture_file
            text:"Plan de Contratacion"
        LabelPolizas:
            text:"Fecha de Contratacion"
        TbPoliza:
            id: phoneclient
        LabelPolizas:
            text:"Fecha de Vigencia"
        TbPoliza:
            id: phoneclient
        LabelPolizas:
            text:"Suma Asegurada"
        TbPoliza:
            id:email_client
            disabled:True
        
 
    BoxLayout:
        size_hint_y: None
        height: "40dp"
        Button:
            text: "Guardar"
            size_hint_x: 15
            on_press: root.submit_poliza()
        Button:
            text: "Borrar"
            size_hint_x: 15
        Button:
            text: "Regresar"
            size_hint_x: 15
            on_press: root.go_back()