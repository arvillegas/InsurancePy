# Reference clientes.py
#: import main clientes.clientes
#: import ListAdapter kivy.adapters.listadapter.ListAdapter
#: import ListItemButton kivy.uix.listview.ListItemButton
 
Clientes:
 
<Clientes>:
    orientation: "vertical"
    first_name_text_input: first_name
    last_name_text_input: last_name
    age_text_input:age_client
    picture_file_input:picture_file
    state_select:state_select
    padding: 10
    spacing: 10
    title:"Nuevo Cliente"

    Label:
        text:'Nuevo Cliente'
        pos:0,250
        font_size:50

    Button:
        text:'Documentacion'
        size_hint:(None,None)
        width:200
        height:80
        pos:300,80
        on_press:root.go_documents()
      
    GridLayout:
        cols:2
        rows:10
        size_hint_y: None
        height: "100dp"
        pos: -100, 400 
        Label:
            text: "Nombre"
            width:20
            height:50
        TextInput:
            id: first_name
            size_hint: (None, None)
            height: 30
            width: 200
        Label:
            text: "Apellido"
            width: 20
            height: 50
        TextInput:
            id: last_name
            size_hint: (None, None)
            height: 30
            width: 200
        Label:
            text:"Edad"
        TextInput:
            id:age_client
            size_hint: (None, None)
            height: 30
            width: 200
        Label:
            text:"Estado"
        Button:
            id:state_select
            size_hint: (None, None)
            height: 30
            width: 200
            text:"Seleccionar Estado"
        Label:
            text:"Ciudad"
        Button:
            id:city_select
            size_hint: (None, None)
            height: 30
            width: 200
            text:"Seleccionar Ciudad"
        Label:
            text:"Colonia"
        TextInput:
            id:nei_client
            size_hint: (None, None)
            height: 30
            width: 200
        Label:
            text:"Calle"
        TextInput:
            id:street_client
            size_hint: (None, None)
            height: 30
            width: 200
        Label:
            text:"Numero"
        TextInput:
            id: numdirclient
            size_hint: (None, None)
            height: 30
            width: 200
        Label:
            text:"Telefono"
        TextInput:
            id: phoneclient
            size_hint: (None, None)
            height: 30
            width: 200
        Label:
            text:"Fotografia"
        Button:
            id:picture_file
            size_hint: (None, None)
            height: 30
            width: 200
            text:"Seleccionar Fotografia"



    BoxLayout:
        size_hint_y: None
        height: "40dp"
        Button:
            text: "Guardar"
            size_hint_x: 15
            on_press: root.submit_student()
        Button:
            text: "Borrar"
            size_hint_x: 15
            on_press: root.delete_student()
        Button:
            text: "Regresar"
            size_hint_x: 15
            on_press: root.go_back()