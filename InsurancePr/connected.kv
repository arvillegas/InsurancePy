#:import Factory kivy.factory.Factory
#:import KivyLexer kivy.extras.highlight.KivyLexer


<Connected>:
    fullscreen: True

    ActionBar:
        pos_hint: {'top':1}

        ActionView:
            use_separator: True
            ActionPrevious:
                title: 'Aseguradora App'
                with_previous: False

            ActionGroup:
                text:'Clientes'
                ActionButton:
                    size_hint_x:None
                    widht:200
                    text: 'Consultar'
                    on_release: root.go_listClientes()
                ActionButton:
                    text: 'Agregar'
                    on_release: root.go_clientes()

            ActionGroup:
                text:'Polizas'
                ActionButton:
                    text: 'Consulta'
                    on_release: root.go_listPolizas()
                ActionButton:
                    text: 'Agregar'
                    on_release: root.go_Polizas()

            ActionGroup:
                text: 'Usuario'
                mode: 'spinner'
                ActionButton:
                    text: 'Password'
                    on_release: root.go_User()
                ActionButton:
                    text: 'Cerrar Sesion'
                    on_release: root.go_CloseSesion()

<ListScreen>:
    fullscreen: True





