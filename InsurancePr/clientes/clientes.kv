# Reference clientes.py
#: import main clientes.clientes
#: import ListAdapter kivy.adapters.listadapter.ListAdapter
#: import ListItemButton kivy.uix.listview.ListItemButton
 
Clientes:
<LabelClientes@Label>
    color:(0,0,0,1)
    halign: 'left'
<Clientes>:
    orientation: "vertical"
    first_name_text_input: first_name
    last_name_text_input: last_name
    age_text_input:age_client
    picture_file_input:picture_file
    state_select:state_select
    nei_client:nei_client

    padding: 10
    spacing: 10
    title:"Nuevo Cliente"

    Label:
        text:'Nuevo Cliente'
        pos:0,250
        font_size:25
        color:(0,0,0,1)

    Button:
        text:'Documentacion'
        size_hint:(None,None)
        width:150
        height:50
        pos_hint: {'left': 0.1,'top' : .25, 'center_x': 0.5}
        on_press:root.go_documents()
      
    GridLayout:
        id:layoutCliente
        cols:2
        rows:10
        size_hint_y: None
        height: "100dp"
        pos: -10, 350 
        LabelClientes:
            text: "Nombre"
            width:20
            height:50
        TextInput:
            id: first_name
            size_hint: (None, None)
            height: 30
            width: 200
        LabelClientes:
            text: "Apellido"
            width: 20
            height: 50
        TextInput:
            id: last_name
            size_hint: (None, None)
            height: 30
            width: 200
        LabelClientes:
            text:"Edad"
        TextInput:
            id:age_client
            size_hint: (None, None)
            height: 30
            width: 200
        LabelClientes:
            text:"Estado"
        Button:
            id:state_select
            size_hint: (None, None)
            height: 30
            width: 200
            text:"Seleccionar Estado"
            on_release:root.open_drop_down(self)
        LabelClientes:
            text:"Ciudad"
        Button:
            id:city_select
            size_hint: (None, None)
            height: 30
            width: 200
            text:"Seleccionar Ciudad"
            on_release:root.open_drop_down_municipio(self)
        LabelClientes:
            text:"Colonia"
        TextInput:
            id:nei_client
            size_hint: (None, None)
            height: 30
            width: 200
        LabelClientes:
            text:"Calle"
        TextInput:
            id:street_client
            size_hint: (None, None)
            height: 30
            width: 200
        LabelClientes:
            text:"Numero"
        TextInput:
            id: numdirclient
            size_hint: (None, None)
            height: 30
            width: 200
        LabelClientes:
            text:"Telefono"
        TextInput:
            id: phoneclient
            size_hint: (None, None)
            height: 30
            width: 200
        LabelClientes:
            text:"Fotografia"
        Button:
            id:picture_file
            size_hint: (None, None)
            height: 30
            width: 200
            text:"Seleccionar Fotografia"
            on_release:root.show_load()



    BoxLayout:
        size_hint_y: None
        height: "40dp"
        Button:
            text: "Guardar"
            size_hint_x: 15
            on_press: root.submit_client()
        Button:
            text: "Borrar"
            size_hint_x: 15
        Button:
            text: "Regresar"
            size_hint_x: 15
            on_press: root.go_back()


<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Load"
                on_release: root.load(filechooser.path, filechooser.selection)

<EstadoDropDown>:
    Button:
        text:"Queretaro"
        size:(200,50)
        size_hint:(None,None)
        on_release: root.select(self.text)
    Button:
        text:"Guanajuato"
        size:(200,50)
        size_hint:(None,None)
        on_release: root.select(self.text)
    Button:
        text:"CD Mexico"
        size:(200,50)
        size_hint:(None,None)
        on_release: root.select(self.text)


<MunicipioDropDown>:
    Button:
        text:"Queretaro"
        size:(200,50)
        size_hint:(None,None)
        on_release: root.select(self.text)
    Button:
        text:"Celaya"
        size:(200,50)
        size_hint:(None,None)
        on_release: root.select(self.text)
    Button:
        text:"Hidalgo"
        size:(200,50)
        size_hint:(None,None)
        on_release: root.select(self.text)