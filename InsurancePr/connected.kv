#:import Factory kivy.factory.Factory
#:import KivyLexer kivy.extras.highlight.KivyLexer


<Connected>:
    fullscreen: True

    ActionBar:
        pos_hint: {'top':1}
        background_color:.5,.08, .08, .5
        ActionView:
            use_separator: True
            ActionPrevious:
                title: 'Demo'
                with_previous: False

            ActionGroup:
                text:'Clientes'
                ActionButton:
                    size_hint_x:None
                    widht:200
                    text: 'Consultar'
                    on_release: root.go_listClientes()
                ActionButton:
                    text: 'Agregar'
                    on_release: root.go_clientes()

            ActionGroup:
                text:'Polizas'
                ActionButton:
                    text: 'Consulta'
                    on_release: root.go_listPolizas()
                ActionButton:
                    text: 'Agregar'
                    on_release: root.go_Polizas()

            ActionGroup:
                text: 'Usuario'
                mode: 'spinner'
                ActionButton:
                    text: 'Password'
                    on_release: root.go_User()
                ActionButton:
                    text: 'Cerrar Sesion'
                    on_release: root.go_CloseSesion()


    Label:
        text:'Bienvenido agente1'
        font_size:20
        color:0,0,0,1
        pos:0,50
    Image:
        id:imagemain
        source: 'logo.png'
        size_hint_y:None
        height:100
        pos:0,150


<ListScreen>:
    fullscreen: True





