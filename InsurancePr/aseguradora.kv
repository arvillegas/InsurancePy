#:include connected.kv
#:include clientes\clientes.kv
#:include agentes\agentes.kv
#:include polizas\poliza.kv
#:include clientes\documentsclientes.kv
#:include usuarios\usuarioAdmin.kv
#:include clientes\listaclientes.kv
#:include agentes\listaagentes.kv
#:include polizas\listaPolizas.kv

<ActionSpinnerOptions@SpinnerOption>
    background_color: .4, .4, .4, 1

<ActionSpinner@Spinner+ActionItem>
    canvas.before:
        Color:
            rgba: 0.128, 0.128, 0.128, 1
        Rectangle:
            size: self.size
            pos: self.pos
    border: 27, 20, 12, 12
    background_normal: 'atlas://data/images/defaulttheme/action_group'
    option_cls: Factory.ActionSpinnerOptions

<LabelLogin@Label>
    color:0,0,0,1
<Button@Button>
    background_color :.812,.867,.961,1


<AseguradoraScreen>:
    title:'Sistema de Aseguradora Demo'
    BoxLayout
        id: login_layout
        orientation: 'vertical'
        padding: [10,50,10,50]
        spacing: 50

        Image:
            id:imagelogo
            source: 'logo.png'

        BoxLayout:
            orientation: 'vertical'

            LabelLogin:
                text: 'Login:'
                font_size: 15
                halign: 'center'
                text_size: root.width-20, 20

            TextInput:
                id: login
                multiline:False
                font_size: 28

        BoxLayout:
            orientation: 'vertical'
            LabelLogin:
                text: 'Password:'
                halign: 'center'
                font_size: 15
                text_size: root.width-20, 20

            TextInput:
                id: password
                multiline:False
                password:True
                font_size: 28

        Button:
            text: 'Iniciar'
            font_size: 24
            size_hint:(.5,.5)
            pos_hint: {'center_x': 0.5}
            color: 0,0,0,1
            background_color: (.247, .545, .769, 0.5)
            on_press: root.do_login(login.text, password.text)

    Button:
        text: 'Registrar'
        font_size: 15
        size_hint:(None,None)
        width:100
        height:30
        pos_hint: {'center_x': 0.5}
        color: 1,1,1,1
        background_color: (.247, .545, .769, 1)
        on_press: root.do_register()






