
<LabelListP@Label>
    color:(0,0,0,1)

<RVPolizas>:
    BoxLayout:
        id:bxTable
        orientation: "vertical"
        color:(0, 0, 0, 1)
        GridLayout:
            size_hint: 1, None
            size_hint_y: None
            height: 25
            cols: 5

            LabelListP:
                text: "No Poliza"
            LabelListP:
                text: "Name"
            LabelListP:
                text: "Fecha"
            LabelListP:
                text: "Tipo"
            LabelListP:
                text:'ver/editar'

        BoxLayout:
            id:bxView
            RecycleView:
                viewclass: 'SelectableButton'
                data: [{'text': str(x)} for x in root.data_items]
                SelectableRecycleGridLayout:
                    cols: 5 
                    default_size: None, dp(26)
                    default_size_hint: 1, None
                    size_hint_y: None
                    height: self.minimum_height
                    orientation: 'vertical'
                    multiselect: True
                    touch_multiselect: True