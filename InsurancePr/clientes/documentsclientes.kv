# Reference agentes.py
#: import main clientes.clientes
#: import ListAdapter kivy.adapters.listadapter.ListAdapter
#: import ListItemButton kivy.uix.listview.ListItemButton
 
DocumentosClientes:
<ButtonDoc@Button>
    size_hint: (None, None)
    height: 30
    width: 140

<LabelDocs@Label>
    color:(0,0,0,1)
    size_hint:(None,None)
    width:190
    height:50
    haling:'justify'
    pos_hint:(0.1,.1)
    valing:'middle'


<DocumentosClientes>:
    orientation: "vertical"
    padding: 10
    spacing: 10
    varlbldom:lbldom
 
    Label:
        text:'Documentos Clientes'
        pos:0,250
        font_size:30
        color:(0,0,0,1)

      
    GridLayout:
        cols:2
        rows:3
        size_hint_y: None
        height: "100dp"
        pos: 15, 400
        LabelDocs:
            id:lbldom
            text:"Comprobante de Domicilio"
        ButtonDoc:
            id:btndom
            text:"Cargar Comprobante"
            on_release:root.show_load()
        LabelDocs:
            id:lbline
            text:"INE"
        ButtonDoc:
            id:btnine
            text:"Cargar Comprobante"
            on_release:root.show_load()
        LabelDocs:
            id:lblingreso
            text:"Comprobante de Ingresos"
        ButtonDoc:
            id:btningreso
            text:"Cargar Comprobante"
            on_release:root.show_load()
            
    BoxLayout:
        size_hint_y: None
        height: "40dp"
        Button:
            text: "Guardar"
            size_hint_x: 15
            on_press: root.submit_documents()
        Button:
            text: "Borrar"
            size_hint_x: 15
            on_press: root.delete_student()
        Button:
            text: "Regresar"
            size_hint_x: 15
            on_press: root.go_back()

<Picture>:
    on_size: self.center = win.Window.center
    size: image.size
    size_hint: None, None

    Image:
        id: image
        source: root.source

        # create initial image to be 400 pixels width
        size: 200, 200 / self.image_ratio

        # add shadow background
        canvas.before:
            Color:
                rgba: 1,1,1,1
            BorderImage:
                source: 'shadow32.png'
                border: (36,36,36,36)
                size:(self.width+72, self.height+72)
                pos: (-36,-36)

