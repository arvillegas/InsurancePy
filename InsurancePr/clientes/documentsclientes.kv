# Reference agentes.py
#: import main clientes.clientes
#: import ListAdapter kivy.adapters.listadapter.ListAdapter
#: import ListItemButton kivy.uix.listview.ListItemButton
 
DocumentosClientes:
<ButtonDoc@Button>
    size_hint: (None, None)
    height: 30
    width: 140

<LabelDocs@Label>
    color:(0,0,0,1)
    size_hint:(None,None)
    width:190
    height:50
    haling:'justify'
    pos_hint:(0.1,.1)
    valing:'middle'


<DocumentosClientes>:
    orientation: "vertical"
    padding: 10
    spacing: 10

 
    Label:
        text:'Documentos Clientes'
        pos:0,250
        font_size:30
        color:(0,0,0,1)

      
    GridLayout:
        cols:2
        rows:3
        size_hint_y: None
        height: "100dp"
        pos: 15, 400
        LabelDocs:
            text:"Comprobante de Domicilio"
        ButtonDoc:
            id:picture_file
            text:"Cargar Comprobante"
            on_release:root.show_load()
        LabelDocs:
            text:"INE"
        ButtonDoc:
            id:picture_file
            text:"Cargar Comprobante"
            on_release:root.show_load()
        LabelDocs:
            text:"Comprobante de Ingresos"
        ButtonDoc:
            id:picture_file
            text:"Cargar Comprobante"
            on_release:root.show_load()
            
    BoxLayout:
        size_hint_y: None
        height: "40dp"
        Button:
            text: "Guardar"
            size_hint_x: 15
            on_press: root.submit_student()
        Button:
            text: "Borrar"
            size_hint_x: 15
            on_press: root.delete_student()
        Button:
            text: "Regresar"
            size_hint_x: 15
            on_press: root.go_back()